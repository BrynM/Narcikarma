{
	"name": "Narcikarma",
	"version": "0.5",
	"manifest_version": 2,
	"description": "A Reddit karma tracker for Google Chrome by badmonkey0001",
	"browser_action": {
		"default_icon": "nckma_assets/img/icon.png",
		"default_popup": "nckma_html/popup.html"
	},
	"icons": {
		"16": "nckma_assets/img/icon16.png",
		"48": "nckma_assets/img/icon48.png",
		"128": "nckma_assets/img/icon128.png"
	},
	"options_page": "nckma_html/options.html",
	"background": {
		"page": "nckma_html/background.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self' https://www.youtube.com",
	"permissions": [
		"cookies",
		"*://www.reddit.com/*",
		"*://narcikarma.net/*",
		"notifications",
		"unlimitedStorage"
	]
}